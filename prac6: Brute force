import itertools
import string
import time

def brute_force_attack(target_password, max_length=4):
    """
    Simulates a brute-force attack by trying all combinations of letters, digits, and symbols
    up to a given length, until the target password is found.
    """
    chars = string.ascii_lowercase + string.digits  # you can add string.ascii_uppercase + string.punctuation
    
    attempts = 0
    start_time = time.time()
    
    for length in range(1, max_length + 1):
        for guess in itertools.product(chars, repeat=length):
            attempts += 1
            guess = ''.join(guess)
            
            if guess == target_password:
                elapsed = time.time() - start_time
                print(f"Password found: {guess}")
                print(f"Attempts: {attempts}")
                print(f"Time taken: {elapsed:.4f} seconds")
                return
    
    print("Password not found within given length range.")


# Main program
if __name__ == "__main__":
    target = input("Enter target password (for demo): ")
    max_len = int(input("Enter max length to try: "))
    brute_force_attack(target, max_len)
