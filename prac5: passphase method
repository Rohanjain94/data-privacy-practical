import random

def generate_passphrase(dictionary_file, num_words=4):
    """
    Generates a random password using words from a dictionary file.
    Each line in the file should contain one word.
    """
    # Read all words from file
    with open(dictionary_file, 'r', encoding='utf-8') as f:
        words = [line.strip() for line in f if line.strip()]

    # Randomly choose words
    chosen_words = random.sample(words, num_words)

    # Join them into a single string (you can use '-' or ' ' or '')
    passphrase = '-'.join(chosen_words)

    return passphrase


# Main program
if __name__ == "__main__":
    dictionary_path = input("Enter dictionary file path: ")
    num_words = int(input("How many words should the password contain? "))

    password = generate_passphrase(dictionary_path, num_words)
    print(f"\nGenerated Password: {password}")
